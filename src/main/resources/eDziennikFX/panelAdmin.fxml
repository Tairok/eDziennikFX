<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eDziennikFX.Controller">

<top>
    <MenuBar>
        <Menu text="File">
            <MenuItem onAction="#handleExit" text="Exit" />
        </Menu>
    </MenuBar>
</top>

<center>
    <TabPane>
        <tabs>
            <Tab text="Add User">
                <content>
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="First Name" />
                     <TextField maxWidth="250.0" prefWidth="150.0" />
                     <Label layoutX="113.0" layoutY="103.0" text="Last Name" />
                     <TextField maxWidth="250.0" prefWidth="150.0" />
                        <Label text="Login" />
                     <TextField maxWidth="250.0" prefWidth="150.0" />
                     <Label layoutX="117.0" layoutY="197.0" text="Password" />
                     <PasswordField maxWidth="250.0" prefWidth="150.0" />
                        <Label text="Role" />
                     <ComboBox fx:id="gradeComboBox2" prefWidth="250.0" visibleRowCount="6" />
                        <Button onAction="#handleAddGrade" text="Add User">
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding></Button>
                    </VBox>
                </content>
            </Tab>

            <Tab text="View Users">
                <content>
                    <VBox alignment="CENTER" spacing="10">
                        <TableView fx:id="diaryTableView">
                            <columns>
                                <TableColumn fx:id="subjectColumn" text="ID" />
                                <TableColumn fx:id="gradeColumn" text="First Name" />
                                <TableColumn fx:id="dateColumn" text="Last Name" />
                           <TableColumn fx:id="gradeColumn1" text="Login" />
                           <TableColumn fx:id="gradeColumn11" text="Role" />
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </Tab>
            <Tab text="Delete Users">
               <content>
                  <VBox alignment="CENTER" spacing="10">
                     <children>
                        <Label text="Login" />
                        <ComboBox fx:id="subjectComboBox1" prefWidth="150" />
                        <Button onAction="#handleAddGrade" text="Delete User">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Button>
                     </children>
                  </VBox>
               </content>
            </Tab>
        </tabs>
    </TabPane>
</center>

</BorderPane>
