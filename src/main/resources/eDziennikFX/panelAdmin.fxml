<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eDziennikFX.Controller">

<top>
    <MenuBar>
        <Menu text="File">
            <MenuItem onAction="#handleExit" text="Exit" />
        </Menu>
    </MenuBar>
</top>

<center>
    <TabPane>
        <tabs>
            <Tab text="Add User">
                <content>
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="First Name" />
                     <TextField fx:id="firstNameFieldAdmin" maxWidth="250.0" prefWidth="150.0" />
                     <Label layoutX="113.0" layoutY="103.0" text="Last Name" />
                     <TextField fx:id="lastNameFieldAdmin" maxWidth="250.0" prefWidth="150.0" />
                        <Label text="Login" />
                     <TextField fx:id="loginFieldAdmin" maxWidth="250.0" prefWidth="150.0" />
                     <Label layoutX="117.0" layoutY="197.0" text="Password" />
                     <PasswordField fx:id="passwordFieldAdmin" maxWidth="250.0" prefWidth="150.0" />
                        <Label text="Role" />
                     <ComboBox fx:id="roleComboBoxAdmin" prefWidth="250.0" visibleRowCount="6" />
                        <Button onAction="#handleAddUser" text="Add User">
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding></Button>
                    </VBox>
                </content>
            </Tab>

            <Tab text="View Users">
                <content>
                    <VBox alignment="CENTER" spacing="10">
                        <TableView fx:id="userTableView">
<!--                            <columns>-->
<!--                                <TableColumn fx:id="idColumnAdmin" text="ID" />-->
<!--                                <TableColumn fx:id="firstNameColumnAdmin" text="First Name" />-->
<!--                                <TableColumn fx:id="lastNameColumnAdmin" text="Last Name" />-->
<!--                           <TableColumn fx:id="loginColumnAdmin" text="Login" />-->
<!--                           <TableColumn fx:id="roleColumnAdmin" text="Role" />-->
<!--                            </columns>-->
                        </TableView>
                    </VBox>
                </content>
            </Tab>
            <Tab text="Delete Users">
               <content>
                  <VBox alignment="CENTER" spacing="10">
                     <children>
                        <Label text="Login" />
                        <ComboBox fx:id="loginComboBoxAdmin" prefWidth="150" />
                        <Button onAction="#handleDeleteUser" text="Delete User">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Button>
                     </children>
                  </VBox>
               </content>
            </Tab>
        </tabs>
    </TabPane>
</center>

</BorderPane>
